<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/top"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/bottom_boarder"
            android:gravity="right">

            <TextView
                android:id="@+id/usernametxtbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="User name"
                android:textSize="25sp"
                android:textStyle="bold"
                android:paddingRight="20dp"/>



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/defaultprofileimage"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>


        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="#fff"
        android:layout_marginBottom="50dp"
        />


    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:background="@drawable/top_and_bottom_boarder">


        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_outline_home"
            android:layout_marginLeft="15dp"


            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/search"
                android:layout_width="40dp"
                android:layout_marginBottom="5dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_outline_search"


                />

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:id="@+id/notificationRel"
                android:layout_width="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_outline_notifications"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:paddingLeft="10dp">

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

        </RelativeLayout>





        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/messages"
            android:layout_width="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_outline_message"
            android:layout_gravity="left"


            />

    </RelativeLayout>




</RelativeLayout>